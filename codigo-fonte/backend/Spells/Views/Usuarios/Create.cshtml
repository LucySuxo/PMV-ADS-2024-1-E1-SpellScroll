@model Spells.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<style>
    main {
        font-family: 'Arial', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: #f0f0f0;
    }

    .cadastro-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    .cadastro-box {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .cadastro-box h2 {
            margin-bottom: 20px;
        }

    .input-group {
        width: 100%;
        margin-bottom: 15px;
    }

        .input-group label {
            display: block;
            margin-bottom: 5px;
        }

        .input-group input {
            width: calc(100% - 20px);
            padding: 10px;
            border: 1px solid #cccccc;
            border-radius: 4px;
            font-size: 16px;
        }

    .button-container {
        display: flex;
        justify-content: center;
    }

    .cadastro-button {
        background-color: #6b21a8;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
    }

        .cadastro-button:hover {
            background-color: #5a189a;
        }

</style>

<body class="dark:text-white dark:bg">
    <div class="cadastro-container">
        <div class="cadastro-box">
            <h2>Cadastro</h2>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome">
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <label asp-for="Email" ></label>
                    <input asp-for="Email" >
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <label asp-for="Senha" ></label>
                    <input asp-for="Senha" >
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <a class="input-group" asp-action="Login">Já tem uma conta? Faça o login</a>
                
                <div class="button-container">
                    <button type="submit" value="Create" class="cadastro-button">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
